<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:text="iDoctor"
        android:textSize="25dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/diagnostic"
        android:layout_width="match_parent"
        android:textSize="25dp"
        android:text="Diagnostic"
        android:textColorHighlight="#F4C2C2"
        android:layout_above="@+id/drug_cost"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/drug_cost"
        android:textSize="25dp"
        android:text="Drug costs"
        android:textColorHighlight="#F4C2C2"
        android:layout_above="@+id/drug_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/drug_store"
        android:layout_width="match_parent"
        android:text="Drug Store"
        android:textColorHighlight="#F4C2C2"
        android:textSize="25dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content" />

</RelativeLayout>
